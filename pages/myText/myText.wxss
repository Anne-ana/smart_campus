/* pages/myText/myText.wxss */
.toping{
  width: 100%;
  height: 280rpx;
  text-align: center;
  position: relative;
}
.toping .box{
  width: 100%;
  height: 100%;
  position: relative;
}
.toping .box>image{
  width: 90%;
  height: 250rpx;
  border-radius: 30rpx;
}
.toping .fonting{
  position: absolute;
  top:40rpx;
  left:70rpx;
  text-align: left;
  height: 80%;
  font-size: 25rpx;
  color:rgb(240, 238, 238);
}
.toping .fonting>h2{
  font-size: 30rpx;
  font-weight: 1000;
}
.toping .fonting>text{
  font-size: 30rpx;
  line-height: 45rpx;
}
.toping .buton{
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border:2rpx solid white;
  border-radius: 25rpx;
}
.barlist{
  width: 90%;
  margin: auto;
  display:flex ;
  justify-content: space-around;
  margin-top: 20rpx;
}
.barlist>view>view:first-child{
  height: 90rpx;
  width: 90rpx;
  border-radius: 50%;
  margin: auto;
  align-items: center;
  display: flex;
  justify-content: center;
}
.barlist>view>view:last-child{
  font-size: 25rpx;
  text-align: center;
}
.barlist>view>view:first-child>image{
  width: 60rpx;
  height: 45rpx;
}
.barlist .yel{
  background-color: #f6b059;
}
.barlist .pul{
  background-color: #8f6aff;
}
.barlist .reed{
  background-color:#f32275 ;
}
.barlist .gre{
  background-color: #0adf91;
} 
.barlist .blu{
  background-color: #319bec;
}

.tinglist{
  width: 90%;
  margin: auto;
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}
.tinglist>view{
  width: 49%;
  height: 200rpx;
  border-radius: 25rpx;
}
.tinglist>view:first-child{
  background: linear-gradient(to right,#feb27a,#ff8260);
}
.tinglist>view:last-child{
  background:linear-gradient(to right,#94f8da,#6ad2e3);
}
.tinglist>view:first-child>image{
  width: 210rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.tinglist>view:last-child>image{
  width: 210rpx;
  height: 200rpx;
  margin-left: 125rpx;
  border-radius: 25rpx;
}
.tinglist>view .text{
  font-size: 30rpx;
  position: absolute;
  top:42%;
  right: 53%;
  color: white;
  line-height: 35rpx; 
}
.tinglist>view .text>view:first-child{
  font-size: 40rpx;
  margin-bottom: 20rpx;
}
.tinglist>view .foning{
  font-size: 30rpx;
  position: absolute;
  top:42%;
  right: 26%;
  color: white;
  line-height: 35rpx; 
}
.tinglist>view .foning>view:first-child{
  font-size: 40rpx;
  margin-bottom: 20rpx;
}

.runtime{
  width: 90%;
  margin: auto;
  display: flex;
  margin-top: 20rpx;
}
.runtime>view:first-child{
  margin-right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: #01ad7c;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.runtime>view:first-child>image{
  width: 40rpx;
  height: 30rpx;

}
.runtime>view:last-child{
  font-size: 30rpx;
  line-height: 50rpx; 
  /* 行高 */
}

.thingfeel{
  width: 90%;
  margin: auto;
  margin-top: 20rpx;
  display: flex;

  justify-content: space-between;
  /* 两端对齐 */

  padding-left: 40rpx;
  padding-top: 40rpx;
  /* 内边距 */

  box-shadow: 3rpx 3rpx 10rpx 3rpx #f3f3f3;
  /* 阴影 */

  border-radius: 20rpx;
}
.thingfeel>view:last-child>image{
  width: 400rpx;
  height: 300rpx;
}
.thingfeel>view:first-child>view:nth-child(2){
  font-size: 30rpx;
  color: #9e9e9e;
  line-height: 40rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.thingfeel>view:first-child>view:last-child{
  width: 140rpx;
  font-size: 30rpx;
  height: 50rpx;
  background: linear-gradient(to right, #3fbef5,#87e0dd);
  color: #f3f3f3;
  border-radius: 20rpx;
  text-align: center;
  line-height: 50rpx;
  
}

.app{
  position: relative;
  left: 30rpx;
  top: 50rpx;
}
.app>view:first-child{
  color: rgb(16, 16, 16);
