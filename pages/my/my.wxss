/* pages/my/my.wxss */

.topt {
  height: 140px;
  background: linear-gradient(180deg, rgba(58, 209, 174, 1) 0%, rgba(255, 255, 255, 0) 100%);
}

.topt .topt1v {
  display: flex;
  margin-left: 10px;
}

.topt .topt1v .my {
  margin-top: 20px;
  width: 255px;
  text-align: center;
  font-weight: bold;
}

.topt .topt1v image {
  margin-top: 20px;
  width: 20px;
  height: 20px;
}

.topt .topt2v {
  margin-top: 40px;
  display: flex;
}

.topt .topt2v .user {
  line-height: 28px;
  font-size: 20px;
  text-align: left;
  margin-left: 10px;
  width: 250px;
}

.topt .topt2v .user view {
  color: rgb(121, 121, 121);
  font-size: 12px;
}

.topt .topt2v image {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background-color: rgba(255, 255, 255, 1);
}

